# Production Environment Variables Template
# Copy this file to .env in production and fill in actual values

# Application Settings
DEBUG=false

# 1Password Integration
# Get from: 1Password → Create Service Account → Copy token
OP_MONGADO_SERVICE_ACCOUNT_TOKEN=ops_xxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# Admin Authentication
# Generate a strong random passkey (use 1Password generator)
# Store in 1Password vault: op://mongado/mongado-prod-passkey/password
ADMIN_PASSKEY=your-strong-random-passkey-here

# Database (Neo4j)
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=your-neo4j-password-here

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=false  # Disable auto-reload in production

# CORS Settings
# Comma-separated list of allowed origins (no spaces around commas recommended)
CORS_ORIGINS=https://mongado.com,https://www.mongado.com

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json  # Use JSON format for log aggregation

# AI/Ollama (optional)
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=mistral

# Session Configuration
SESSION_SECRET_KEY=your-session-secret-key-here  # Generate with: openssl rand -hex 32

# Rate Limiting (for ephemeral notes)
RATE_LIMIT_ENABLED=true
MAX_NOTES_PER_HOUR=10
MAX_SEARCHES_PER_HOUR=60
MAX_AI_REQUESTS_PER_HOUR=20

# Memory Limits (ephemeral notes)
MAX_EPHEMERAL_MEMORY_MB=500
MAX_NOTES_PER_SESSION=50
MAX_EPHEMERAL_NOTES_TOTAL=10000

# Content Filtering
MAX_NOTE_LENGTH=50000  # ~50KB
ENABLE_SPAM_FILTER=true

# Performance
CACHE_ENABLED=true
CACHE_TTL_SECONDS=3600

# Monitoring (optional)
SENTRY_DSN=https://xxxxxxxxxxxxx@sentry.io/xxxxxxx
ENABLE_METRICS=true
