#!/bin/bash
# Pre-push hook to run fast quality checks
# Prevents pushing code that will fail CI quality checks

set -e  # Exit on first error

echo "ðŸ” Running pre-push quality checks..."
echo ""

# Colors for output
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
NC='\033[0m' # No Color

# Track if any checks fail
FAILED=0

# Backend checks
echo "ðŸ“¦ Backend Quality Checks"
echo "========================="

# Linting
echo -n "  Linting... "
if docker compose exec -T backend ruff check . > /dev/null 2>&1; then
    echo -e "${GREEN}âœ“${NC}"
else
    echo -e "${RED}âœ—${NC}"
    echo -e "${RED}  Run 'make lint-backend' to see errors${NC}"
    FAILED=1
fi

# Type checking
echo -n "  Type checking... "
if docker compose exec -T backend mypy . > /dev/null 2>&1; then
    echo -e "${GREEN}âœ“${NC}"
else
    echo -e "${YELLOW}âš ${NC} (type errors exist but not blocking)"
fi

# Security check
echo -n "  Security scan... "
if docker compose exec -T backend bandit -r . -c pyproject.toml > /dev/null 2>&1; then
    echo -e "${GREEN}âœ“${NC}"
else
    echo -e "${RED}âœ—${NC}"
    echo -e "${RED}  Run 'make security' to see issues${NC}"
    FAILED=1
fi

echo ""

# Frontend checks
echo "ðŸŽ¨ Frontend Quality Checks"
echo "=========================="

# Linting
echo -n "  Linting... "
if docker compose exec -T frontend npm run lint > /dev/null 2>&1; then
    echo -e "${GREEN}âœ“${NC}"
else
    echo -e "${RED}âœ—${NC}"
    echo -e "${RED}  Run 'docker compose exec frontend npm run lint' to see errors${NC}"
    FAILED=1
fi

# Type checking
echo -n "  Type checking... "
if docker compose exec -T frontend npm run type-check > /dev/null 2>&1; then
    echo -e "${GREEN}âœ“${NC}"
else
    echo -e "${RED}âœ—${NC}"
    echo -e "${RED}  Run 'docker compose exec frontend npm run type-check' to see errors${NC}"
    FAILED=1
fi

# Format checking
echo -n "  Format checking... "
if docker compose exec -T frontend npm run format:check > /dev/null 2>&1; then
    echo -e "${GREEN}âœ“${NC}"
else
    echo -e "${RED}âœ—${NC}"
    echo -e "${RED}  Run 'docker compose exec frontend npm run format' to fix formatting${NC}"
    FAILED=1
fi

echo ""

# Summary
if [ $FAILED -eq 0 ]; then
    echo -e "${GREEN}âœ“ All quality checks passed!${NC}"
    echo ""
    exit 0
else
    echo -e "${RED}âœ— Quality checks failed. Please fix the issues above before pushing.${NC}"
    echo ""
    echo "To skip this hook (not recommended), use: git push --no-verify"
    echo ""
    exit 1
fi
